{% extends "@App/Main/main.html.twig" %}

{% block header %}
    {{ parent() }}
{% endblock header %}


{% block content %}
    <div class="container">
        <div class="row">

            <div class="col-md-12">

                <div class="panel">
                    <div class="panel-body">


                        {% for training in trainings %}

                        <!--/stories-->
                        <div class="row">
                            <br>
                            {% if training.image != '' %}
                                <div class="col-md-2 col-sm-3 text-center">
                                    <a class="story-img" href="#"><img src="{{ training.image }}" style="width:100px;height:100px" class="img-circle"></a>
                                </div>
                            {% endif %}
                            <div class="col-md-10 col-sm-9">
                                <h3>{{ training.title }}</h3>
                                <div class="row">
                                    <div class="col-xs-9">
                                        <p>{{ training.description }}</p>
                                    </div>
                                    <div class="col-xs-3"></div>
                                </div>
                                <br><br>
                            </div>
                        </div>
                        <hr>

                        {% endfor %}

                    </div>
                </div>

            </div><!--/col-12-->
        </div>
    </div>

{% endblock content %}

{% block footer %}
    {{ parent() }}
{% endblock footer %}